<resources>

	<style name="Base.Theme.NHBooks.Light.DarkActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Base.Theme.NHBooks.Light" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Base.Theme.NHBooks.Dark" parent="Theme.AppCompat">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Theme.NHBooks.Light" parent="Base.Theme.NHBooks.Light">
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
	</style>

	<style name="Theme.NHBooks.Light.DarkActionBar" parent="Base.Theme.NHBooks.Light.DarkActionBar">
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
	</style>

	<style name="Theme.NHBooks.Light.Transparent" parent="Theme.NHBooks.Light.DarkActionBar">
		<item name="android:windowIsTranslucent">true</item>
		<item name="android:windowBackground">@android:color/transparent</item>
	</style>

	<style name="Theme.NHBooks.Dark" parent="Base.Theme.NHBooks.Dark">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="colorPrimary">@color/deep_purple_500</item>
		<item name="colorPrimaryDark">@color/deep_purple_800</item>
		<item name="colorAccent">@color/pink_500</item>
		<item name="colorControlNormal">@android:color/white</item>
		<item name="android:textColorPrimary">@android:color/white</item>
	</style>

	<style name="TextTag">
		<item name="@android:textSize">@dimen/tag_text_size</item>
		<item name="@android:textColor">@android:color/white</item>
		<item name="@android:background">@color/deep_purple_800</item>
		<item name="@android:ellipsize">marquee</item>
		<item name="@android:singleLine">true</item>
		<item name="@android:paddingTop">4dp</item>
		<item name="@android:paddingBottom">4dp</item>
		<item name="@android:paddingLeft">8dp</item>
		<item name="@android:paddingRight">8dp</item>
	</style>

	<style name="Theme.NHBooks.Dark.Translucent" parent="Theme.NHBooks.Dark"/>

	<style name="Theme.NHBooks.Light.Translucent" parent="Theme.NHBooks.Light"/>

	<style name="Theme.NHBooks.Light.DarkActionBar.Translucent" parent="Theme.NHBooks.Light.DarkActionBar"/>

	<style name="Theme.NHBooks.Light.NewHome" parent="Theme.NHBooks.Light.DarkActionBar">
		<item name="android:windowBackground">@color/deep_purple_500</item>
	</style>

	<style name="TextAppearance.NHBooks.ParallaxTitle" parent="TextAppearance.AppCompat.Headline">
		<item name="android:textColor">@color/material_text_light_black</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">1</item>
		<item name="android:shadowRadius">5</item>
		<item name="android:shadowColor">@color/translucent_text_shadow_parallax</item>
	</style>

</resources>
